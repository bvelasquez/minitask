{
  "name": "task-notes-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for task and notes management with integrated web UI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "clean": "rm -rf dist && cd frontend && rm -rf dist",
    "install:frontend": "cd frontend && npm install",
    "postinstall": "npm run install:frontend",
    "server:start": "pm2 start ecosystem.config.cjs",
    "server:stop": "pm2 stop task-notes-server",
    "server:restart": "pm2 restart task-notes-server",
    "server:status": "pm2 status task-notes-server",
    "server:logs": "pm2 logs task-notes-server",
    "server:delete": "pm2 delete task-notes-server"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "marked": "^12.0.0",
    "open": "^10.1.0",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/sqlite3": "^3.1.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "tasks",
    "notes",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT"
}